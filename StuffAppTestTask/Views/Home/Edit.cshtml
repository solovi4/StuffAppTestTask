@{
    ViewData["Title"] = "Редактирование сотрудника";
}

@model EmployeeEditModel

<h1>Редактирование сотрудника</h1>

@using (Html.BeginForm("EditEmployee", "Home", FormMethod.Post))
{
    @Html.TextBoxFor(m => m.Id, new {style = "display: none;"})
    
    <div>
        <label>Имя</label>
    </div>

    <div>
        @Html.TextBoxFor(m => m.Name, new {autocomplete="on"})
    </div>

    <div>
        <label>Фамилия</label>
    </div>

    <div>
        @Html.TextBoxFor(m => m.Surname)
    </div>
    
    <div>
        <label>Пол</label>
    </div>

    <div>
        @Html.DropDownListFor(m => m.GenderId, Model.Genders, "Выберите пол")
    </div>

    <div>
        <label>Возраст</label>
    </div>

    <div>
        @Html.TextBoxFor(m => m.Age, new { type = "number" })
    </div>
    
    <div>
        <label>Отдел</label>
    </div>

    <div>
        @Html.DropDownListFor(m => m.DepartmentId, Model.Departments, "Выберите отдел")
    </div>

    <label>Опыт работы</label>

    <div>
        @Html.ListBoxFor(m => m.ProgramLanguages, Model.AllProgramLanguages, "Выберите язык программирования")
    </div>
    
    <p><input type="submit" value="Изменить" /></p>
}